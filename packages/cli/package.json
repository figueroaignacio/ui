{
  "name": "i7a-cli",
  "version": "0.1.4",
  "type": "module",
  "bin": {
    "i7a": "./dist/cli.js"
  },
  "scripts": {
    "start:dev": "tsx src/cli.ts",
    "build": "tsup && pnpm run copy:templates",
    "copy:templates": "cp -r src/templates dist/templates",
    "link": "pnpm build && pnpm link --global"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "fs-extra": "^11.3.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.0.0",
    "tsup": "^8.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  }
}
